<?xml version="1.0" encoding="utf-8"?>
<configuration>

<!--
    In order to add logging of rendering activity to an application which consumes ZPT-Sharp
    as an API, add the following to your application configuration file.

    You may read more about this at http://csf-dev.github.io/ZPT-Sharp/logging.html

<configSections>
  <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
</configSections>

<log4net>
  <root>
    <level value="WARN" />
    <appender-ref ref="FileAppender" />
  </root>
  <appender name="FileAppender" type="log4net.Appender.FileAppender">
    <file value="MyApplication.log" />
    <appendToFile value="false" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="[%-5level] [%logger] %message%n" />
    </layout>
  </appender>
  <logger name="CSF.Zpt">
    <level value="DEBUG" />
  </logger>
</log4net>

<system.diagnostics>    
  <sources>
    <source name="CSF.Zpt" switchName="defaultSwitch" switchType="System.Diagnostics.SourceSwitch">
      <listeners>
        <add name="log4netListener" />
        <remove name="Default" />
      </listeners>
    </source>
  </sources>
  <switches>
    <add name="defaultSwitch" value="Verbose"/>
  </switches>
  <sharedListeners>
    <add name="log4netListener"
          type="CSF.Zpt.SelfConfiguringLog4netTraceListener, CSF.Zpt.Log4net">
      <filter type="System.Diagnostics.EventTypeFilter" initializeData="Verbose"/>
    </add>
  </sharedListeners>
</system.diagnostics>

-->

</configuration>

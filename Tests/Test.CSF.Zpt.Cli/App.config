<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <sectionGroup name="CSF">
      <sectionGroup name="Zpt">
          <section name="DocumentImplementationConfiguration"
                   type="CSF.Zpt.DocumentImplementationConfiguration, CSF.Zpt" />
        <sectionGroup name="Tales">
          <section name="ExpressionEvaluatorConfiguration"
                   type="CSF.Zpt.Tales.ExpressionEvaluatorConfiguration, CSF.Zpt" />
        </sectionGroup>
      </sectionGroup>
    </sectionGroup>

    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
  </configSections>

  <CSF>
    <Zpt>
      <DocumentImplementationConfiguration>
        <Implementations>
          <Implementation TypeName="CSF.Zpt.DocumentProviders.HtmlZptDocumentProvider, CSF.Zpt.DocumentProviders.HtmlHAP" IsDefaultHtml="True" />
          <Implementation TypeName="CSF.Zpt.DocumentProviders.XmlLinqZptDocumentProvider, CSF.Zpt.DocumentProviders.XmlLinq" IsDefaultXml="True" />
          <Implementation TypeName="CSF.Zpt.DocumentProviders.LegacyXmlZptDocumentProvider, CSF.Zpt.DocumentProviders.XmlLegacy" />
        </Implementations>
      </DocumentImplementationConfiguration>
      <Tales>
        <ExpressionEvaluatorConfiguration>
          <Implementations>
            <Implementation TypeName="CSF.Zpt.ExpressionEvaluators.PathExpressionEvaluator, CSF.Zpt.ExpressionEvaluators.PathExpressions" IsDefault="True" />
            <Implementation TypeName="CSF.Zpt.ExpressionEvaluators.StringExpressionEvaluator, CSF.Zpt.ExpressionEvaluators.StringExpressions" />
            <Implementation TypeName="CSF.Zpt.ExpressionEvaluators.NotExpressionEvaluator, CSF.Zpt.ExpressionEvaluators.NotExpressions" />
            <Implementation TypeName="CSF.Zpt.ExpressionEvaluators.LocalVariablePathExpressionEvaluator, CSF.Zpt.ExpressionEvaluators.PathExpressions" />
          </Implementations>
        </ExpressionEvaluatorConfiguration>
      </Tales>
    </Zpt>
  </CSF>

  <log4net>
    <root>
      <level value="WARN" />
      <appender-ref ref="FileAppender" />
    </root>
    <appender name="FileAppender" type="log4net.Appender.FileAppender">
      <file value="../../../logs/Test.CSF.Zpt.Cli.log" />
      <appendToFile value="false" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="[%-5level] [%logger] %message%n" />
      </layout>
    </appender>
    <logger name="CSF.Zpt">
      <level value="DEBUG" />
    </logger>
    <logger name="Test.CSF.Zpt">
      <level value="DEBUG" />
    </logger>
  </log4net>

  <system.diagnostics>    
    <sources>
      <source name="CSF.Zpt" switchName="defaultSwitch" switchType="System.Diagnostics.SourceSwitch">
        <listeners>
          <add name="log4netListener" />
          <remove name="Default" />
        </listeners>
      </source>
      <source name="CSF.Zpt.Cli" switchName="defaultSwitch" switchType="System.Diagnostics.SourceSwitch">
        <listeners>
          <add name="log4netListener" />
          <remove name="Default" />
        </listeners>
      </source>
    </sources>
    <switches>
      <add name="defaultSwitch" value="Verbose"/>
    </switches>
    <sharedListeners>
      <add name="log4netListener"
           type="CSF.Zpt.Log4netTraceListener, CSF.Zpt.Log4net">
        <filter type="System.Diagnostics.EventTypeFilter" initializeData="Verbose"/>
      </add>
    </sharedListeners>
  </system.diagnostics>

</configuration>

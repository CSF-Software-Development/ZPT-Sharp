<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <sectionGroup name="CSF">
      <sectionGroup name="Zpt">
        <section name="PluginConfigurationSection"
                 type="CSF.Zpt.PluginConfigurationSection, CSF.Zpt" />
          <sectionGroup name="ExpressionEvaluators">
            <sectionGroup name="CSharpExpressions">
              <section name="NamespaceConfiguration"
                       type="CSF.Zpt.ExpressionEvaluators.CSharpExpressions.NamespaceConfiguration, CSF.Zpt.ExpressionEvaluators.CSharpExpressions" />
            </sectionGroup>
          </sectionGroup>
      </sectionGroup>
    </sectionGroup>

    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
  </configSections>

  <CSF>
    <Zpt>
      <PluginConfigurationSection DefaultHtmlDocumentProvider="CSF.Zpt.DocumentProviders.HtmlZptDocumentProvider"
                                  DefaultXmlDocumentProvider="CSF.Zpt.DocumentProviders.XmlLinqZptDocumentProvider"
                                  DefaultExpressionEvaluator="CSF.Zpt.ExpressionEvaluators.PathExpressions.PathExpressionEvaluator">
        <PluginAssemblies>
          <Assembly Name="CSF.Zpt.DocumentProviders.HtmlHAP" />
          <Assembly Name="CSF.Zpt.DocumentProviders.XmlLinq" />
          <Assembly Name="CSF.Zpt.ExpressionEvaluators.PathExpressions" />
          <Assembly Name="CSF.Zpt.ExpressionEvaluators.StringExpressions" />
          <Assembly Name="CSF.Zpt.ExpressionEvaluators.NotExpressions" />
          <Assembly Name="CSF.Zpt.ExpressionEvaluators.CSharpExpressions" />
          <Assembly Name="CSF.Zpt.ExpressionEvaluators.PythonExpressions" />
        </PluginAssemblies>
      </PluginConfigurationSection>

      <ExpressionEvaluators>
        <CSharpExpressions>
          <NamespaceConfiguration>
            <add Namespace="System" />
            <add Namespace="System.Linq" />
          </NamespaceConfiguration>
        </CSharpExpressions>
      </ExpressionEvaluators>
    </Zpt>
  </CSF>

  <log4net>
    <root>
      <level value="WARN" />
      <appender-ref ref="FileAppender" />
    </root>
    <appender name="FileAppender" type="log4net.Appender.FileAppender">
      <file value="../../../logs/Test.CSF.Zpt.Integration.log" />
      <appendToFile value="false" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="[%-5level] [%logger] %message%n" />
      </layout>
    </appender>
    <logger name="CSF.Zpt">
      <level value="DEBUG" />
    </logger>
    <logger name="Test.CSF.Zpt">
      <level value="INFO" />
    </logger>
  </log4net>

  <system.diagnostics>    
    <sources>
      <source name="CSF.Zpt" switchName="defaultSwitch" switchType="System.Diagnostics.SourceSwitch">
        <listeners>
          <add name="log4netListener"
               type="CSF.Zpt.Log4netTraceListener, CSF.Zpt.Log4net">
            <filter type="System.Diagnostics.EventTypeFilter" initializeData="Verbose"/>
          </add>
          <remove name="Default" />
        </listeners>
      </source>
    </sources>
    <switches>
      <add name="defaultSwitch" value="Verbose"/>
    </switches>
  </system.diagnostics>

</configuration>
